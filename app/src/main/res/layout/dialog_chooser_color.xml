<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/dialog_chooser_color"
    android:elevation="10dp"
    android:background="@color/white"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            style="@style/style_text_dialog_change_color"
            android:text="Màu sắc, khung"
            android:paddingTop="10dp"
            />

        <ImageView
            android:id="@+id/icCloseDialog"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_close_2"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|center|end"/>
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|start"
            android:paddingHorizontal="15dp"
           >

            <ImageView
                android:id="@+id/color1"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_1"
            />

            <ImageView
                android:id="@+id/color2"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_2"
              />

            <ImageView
                android:id="@+id/color3"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_3"
               />

            <ImageView
                android:id="@+id/color4"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_4"
              />


            <ImageView
                android:id="@+id/color5"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_5"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="#EDEDED"
                android:layout_marginStart="5dp">
                <ImageView
                    android:id="@+id/border1"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_1"
                    android:scaleType="centerInside"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/border2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_2"
                    android:scaleType="centerInside"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/border3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_3"
                    android:scaleType="centerInside"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/border4"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_4"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/border5"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_5"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/border6"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_6"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="300dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/border7"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bg_border_7"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mali"
        android:textColor="@color/black"
        android:text="Nền"
        android:textSize="18dp"
        android:layout_marginStart="20dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp">
            <ImageView
                android:id="@+id/cav_background_hide"
                style="@style/style_card_view_dialog_change_color"
                android:src="@drawable/ic_hide_source"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_1"
                style="@style/style_card_view_dialog_change_color"

                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_hide"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_1"
                  />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_2"
                style="@style/style_card_view_dialog_change_color"
                app:cardCornerRadius="200dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_1"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_2" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_3"
                style="@style/style_card_view_dialog_change_color"
                app:cardCornerRadius="200dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_2"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_3"
                   />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_4"
                style="@style/style_card_view_dialog_change_color"

                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_3"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_4" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_5"
                style="@style/style_card_view_dialog_change_color"

                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_4"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_5"
                   />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</LinearLayout>


